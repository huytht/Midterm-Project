@model IEnumerable<Order>

@{
    ViewData["Title"] = "ShowAll";
}

<h1>ShowAll</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountTicket)
            </th>
            <th>
                Film name
            </th>
            <th>
                Cinema Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmSchedule.PremiereTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountTicket)
            </td>
                <th>
                    @Html.DisplayFor(modelItem => item.FilmSchedule.Film.Name)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.FilmSchedule.Cinema.Name)
                </th>
            <td>
                @Html.DisplayFor(modelItem => item.FilmSchedule.PremiereTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
